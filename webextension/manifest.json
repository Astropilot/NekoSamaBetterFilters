{
    "manifest_version": 2,
    "name": "Refined Neko-Sama.fr",
    "version": "0.0.0",
    "description": "Une extension qui corrige et rend pleinement fonctionnelle la page d'animes de Neko-Sama.fr",
    "author": "Yohann Martin",
    "homepage_url": "https://github.com/Astropilot/NekoSamaBetterFilters",
    "applications": {
        "gecko": {
            "id": "refined_nekosama@astropilot.github.io"
        }
    },
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.neko-sama.fr/*",
        "*://*.myvidbid.ovh/*",
        "*://*.pstream.net/*",
        "*://*.inpagepush.com/*",
        "*://*.mystream.to/*"
    ],
    "background": {
        "scripts": [
            "options-storage.js",
            "vendors/browser-polyfill.js",
            "hijacking/hijack-requests.js",
            "hijacking/pstream/pstream-requests.js",
            "hijacking/mystream/mystream-requests.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.neko-sama.fr/anime",
                "https://www.neko-sama.fr/anime?*"
            ],
            "run_at": "document_start",
            "js": [
                "vendors/browser-polyfill.js",
                "hijacking/utils.js",
                "hijacking/hijack-js.js"
            ],
            "css": [
                "animes/style.css",
                "vendors/nprogress/nprogress.css"
            ]
        },
        {
            "matches": [
                "https://www.neko-sama.fr/anime/info/*"
            ],
            "run_at": "document_idle",
            "js": [
                "vendors/url-search-params.min.js",
                "animes/anime-info.js"
            ]
        },
        {
            "all_frames": true,
            "matches": [
                "https://www.pstream.net/e/*"
            ],
            "run_at": "document_start",
            "js": [
                "options-storage.js",
                "hijacking/utils.js",
                "hijacking/pstream/pstream-overlay.js"
            ]
        },
        {
            "all_frames": true,
            "matches": [
                "https://embed.mystream.to/*"
            ],
            "run_at": "document_start",
            "js": [
                "options-storage.js",
                "hijacking/utils.js",
                "hijacking/mystream/mystream-overlay.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "animes/better-filters.js",
        "vendors/nekosama-libs.min.js",
        "vendors/nprogress/nprogress.min.js",
        "animes/template.html"
    ]
}
